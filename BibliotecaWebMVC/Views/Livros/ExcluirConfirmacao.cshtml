@model Livro
@{
    ViewData["Title"] = "Excluir Livro";
}

<div class="text-center">
    <h1 class="display-6 text-center">Deseja excluir @Model.Nome ?</h1>
</div>

<a class="btn btn-danger" role="button" asp-controller="Livros" asp-action="Excluir" asp-route-id="@Model.Id">Confirmar</a>
<a class="btn btn-secondary" role="button" asp-controller="Livros" asp-action="Listar">Voltar</a>
